<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_below="@+id/header_cover_image"
            android:elevation="0dp" android:background="@color/colorPrimary"
            android:paddingBottom="24dp"
            android:layout_height="100dp">



        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

        </LinearLayout>

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:scaleType="centerCrop" android:background="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_height="260dp" />


        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78\u00B0"
            android:textColor="#fff"
            android:textSize="66sp"
            android:textStyle="bold"
            android:layout_marginStart="45dp"
            android:layout_marginTop="13dp"
            android:layout_alignTop="@+id/user_profile_photo"
            android:layout_toEndOf="@+id/user_profile_photo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunny all day"
            android:textColor="#fff"
            android:textSize="24sp"
            android:layout_alignStart="@+id/user_profile_name"
            android:layout_below="@+id/user_profile_name" />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sunny"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="29dp"
            android:layout_above="@+id/profile_layout"
            android:layout_alignStart="@+id/user_profile_short_bio" />

        <TextView
            android:id="@+id/user_profile_short_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textColor="#fff"
            android:textSize="36sp"
            android:layout_marginStart="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="26dp" />
    </RelativeLayout>
</ScrollView>